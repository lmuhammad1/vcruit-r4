<div class='row'>
	<div class="span8 offset1">	
		<p id="notice"><%= notice %></p>
      <%= @video_page.name %>
		<article>
      <h1><%= @video_page.video_title %></h1>
      <iframe src="http://fast.wistia.net/embed/iframe/<%= @video_page.video_code %> ?controlsVisibleOnLoad=true&version=v1&videoHeight=360&videoWidth=640&volumeControl=true" allowtransparency="true" frameborder="0" scrolling="no" class="wistia_embed" name="wistia_embed" width="640" height="360"></iframe>
      <h3>Contact <%= @video_page.profile.first_name %> <%= @video_page.profile.last_name %></h3>
     
    
    
    </article>

		<p>
		  <%= @video_page.profile.phone %>
      <%= @video_page.profile.email %>
		</p>
    
	  <%= link_to image_tag("f_logo.png", alt: "Visit us at Facebook", width:"20", height:"20"), "http://www.facebook.com/#{@video_page.profile.facebook}" %>
	  <%= link_to image_tag("twitter.png", alt: "Follow us on Twitter", width:"20", height:"20"), "http://www.twitter.com/#{@video_page.profile.twitter}" %>
	  <%= link_to image_tag("linkedin.png", alt: "Visit us at Linkedin", width:"20", height:"20"), "http://www.linkedin.com/in/#{@video_page.profile.linkedin}" %> 
    <div>
    <a href="#" 
      onclick="
        window.open(
          'https://www.facebook.com/sharer/sharer.php?u='+encodeURIComponent(location.href), 
          'facebook-share-dialog', 
          'width=626,height=436'); 
        return false;">
       <%= image_tag("f_logo.png") %>
    </a>
    
    <a href="https://twitter.com/share" class="twitter-share-button" data-lang="en">Tweet</a>
  </div>
    
    <h3><%= @video_page.job_description_title %></h3>
    <p><%=raw @video_page.job_description %></p>

		<p>
		  <strong>Description:</strong>
		  <%= @video_page.description %>
		</p>

		<%= link_to 'Edit', edit_video_page_path(@video_page) %> |
		<%= link_to 'Back', video_pages_path %>
	</div>
</div>
