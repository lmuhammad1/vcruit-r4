<div class='row'>
	<div class="span8 offset1">	
		<%= form_for(@video_page) do |f| %>
		  <% if @video_page.errors.any? %>
		    <div id="error_explanation">
		      <h2><%= pluralize(@video_page.errors.count, "error") %> prohibited this video_page from being saved:</h2>

		      <ul>
		      <% @video_page.errors.full_messages.each do |msg| %>
		        <li><%= msg %></li>
		      <% end %>
		      </ul>
		    </div>
		  <% end %>

		  <div class="field">
		    <%= f.label :name %><br>
		    <%= f.text_field :name %>
		  </div>
		  <div class="field">
		    <%= f.label :title %><br>
		    <%= f.text_field :title %>
		  </div>
		  <div class="field">
		    <%= f.label :description %><br>
		    <%= f.text_area :description, class: 'wysihtml5' %>
		  </div>
		  <div class="actions">
		    <%= f.submit "Create Video page", :class=>'btn btn-primary' %>
		  </div>
		<% end %>
	</div>
</div>

<script type="text/javascript">
  $('.wysihtml5').each(function(i, elem) {
    $(elem).wysihtml5();
  });
</script>