		  <div class="field">
		    <%= f.label :job_description %>
		    <%= f.text_area :job_description, class: 'wysihtml5' %>
		  </div>
		  <div class="actions">
		    <%= f.submit "Create Video page", :class=>'btn btn-primary', :target => "_blank"  %>
