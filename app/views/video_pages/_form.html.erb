		        <li><%= msg %></li>
		      <% end %>
		      </ul>
		    </div>
		  <% end %>
	</div>
</div>



        
		    <%= f.label :name %>
		    <%= f.text_field :name, :class=>"span12", :placeholder=>"input name of page" %>
