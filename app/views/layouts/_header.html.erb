<div class="main-header">
  <div id="main-logo"><%= link_to image_tag("vcruit-logo.png", alt: "vCruit"), root_path %>
  </div>
  <nav class="main-nav">
    <ul id="nav-container">
      <li class="nav-padding"><%= link_to "FAQ",   faq_path %></li>
      <li class="nav-padding"><%= link_to "Contact",   contact_path %></li>
